@model ForumApp.Models.Forum.ForumTopicModel;

<h2>Posts for @Model.Forum.Title</h2>

<span id="headingBtn">
    <a asp-controller="Post"
        asp-action="CreateNewPost"
        asp-route-forumId="@Model.Forum.Id"
        class="btn btn-newPost"
    >
        Create New Post
    </a>
</span>

@if (Model.PostList.Any())
{
    <table class="table table-bordered table-hover" id="forumIndexTable">
        <tbody>
            @foreach (var post in Model.PostList)
            {
            <tr>
                <td>
                    @post.Id
                </td>
                <td>
                    <a asp-controller="Post"
                       asp-action="Index"
                       asp-route-postId="@post.Id">
                        @post.Title
                    </a>
                </td>
                <td>
                    @post.AuthorName
                </td>
                <td>
                    @post.AuthorRating
                </td>
                <td>
                    @post.Created
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="noPosts">
        <hr>
        <p>Post List is empty. Add more Posts</p>
        <a asp-controller="Post"
            asp-action="CreateNewPost"
            asp-route-forumId="@Model.Forum.Id"
        >Create New Post</a>
    </div>
}