@model ForumApp.Models.PostReply.PostReplyModel

<div class="container body-content">   
    <div class="row sectionHeader">
        <div class="sectionHeading">Reply | @Model.PostTitle</div>
        <div class="forumLogo" style="background-image: url(@Model.ForumImageUrl)"></div>
        <span id="headingBtn">
            <a asp-controller="Post"
               asp-action="Index"
               asp-route-postId="@Model.PostId"
               class="btn btn-back"
               >Back to post</a>
        </span>
    </div>
    <div class="row">
        <div id="postReply">
            <h3>@Model.PostTitle</h3>
            <p>@Model.PostContent</p>
        </div>
    </div>
    <div class="row">
        <div id="createReply">
            <div class="authorBlock">
                Submit reply as @Model.AuthorName
            </div>
            <form asp-action="AddNewPostReply" method="post" id="addReplyForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ReplyContent">Reply:</label>
                    <textarea asp-for="ReplyContent"
                              rows="20"
                              class="form-control"
                              placeholder="Add Reply ...">
                    </textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <button type="submit"
                        id="submitRepluBtn"
                        class="btn btn-submitPost">
                    Reply
                </button>
                <input asp-for="AuthorId" type="hidden" />
                <input asp-for="PostId" type="hidden" />
                <input asp-for="ForumId" type="hidden" />
            </form>
        </div>
    </div>
</div>