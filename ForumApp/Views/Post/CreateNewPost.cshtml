@model ForumApp.Models.Post.NewPostModel

<h1>Create New Post | @Model.ForumName</h1>

<form asp-action="AddPost" method="post" id="addPostForm">
    <div class="form-group">
        <label asp-for="PostTitle"></label>
        <input asp-for="PostTitle" class="form-control" placeholder="Add Title..."/>
    </div>
    <div class="form-group">
        <label asp-for="PostContent"></label>
        <textarea asp-for="PostContent" class="form-control" placeholder="Add Content..."></textarea>
    </div>
    <button type="submit" id="submitPostBtn" class="btn btn-submitPost">
        Submit Post
    </button>
    <input asp-for="ForumId" type="hidden" />
</form>
