@model ForumApp.Models.Post.PostIndexModel


<div class="container body-content">
    <div class="row postHeader">
        <div class="postHeading">
            <span class="postIndexTitle">
                @Model.Title
            </span>
            <span class="headingBtn">
                <a class="btn btn-back"
                asp-controller="Forum"
                asp-action="Topic"
                asp-route-id="@Model.Forum.Id">
                    Back To @Model.Forum.Title
                </a>

            </span>
        </div>
    </div>

    <h2>Forum: @Model.Forum.Title</h2>

    <h3>Post: @Model.Title</h3>
    <!-- Create a card here from my post app -->
    <div>
        <Content>
            <p>Author Name: @Model.AuthorName</p>
            <p>Author Rating: @Model.AuthorRating</p>
            <p>Post : @Model.Created</p>
        </Content>
        <div>
            <p>@Model.Content</p>
        </div>
        <div>Replies count: @Model.RepliesCount</div>
    </div>
    <!-- Add replies -->
   
</div>

